# API Configuration
API_BASE_URL=http://185.22.152.208:80
DEVICE_ID=pi-001
TOKEN=

# Camera Configuration
# For RTSP camera (используется в main.py)
RTSP_URL=rtsp://user:pass@camera/stream

# For USB camera (используется в main_usb.py)
USB_DEVICE_INDEX=0

# Recognition Model Configuration
# Поддерживаемые модели: insightface, facenet, hashed
MODEL_NAME=insightface

# FaceNet Model Settings (если используется facenet)
FACENET_MODEL_PATH=facenet.onnx

# InsightFace Model Settings (если используется insightface)
INSIGHTFACE_MODEL_NAME=buffalo_l
# INSIGHTFACE_DET_SIZE=(320,320)  # Размер для детекции (320x320 для RPi, 640x640 для мощных систем)

# Recognition Threshold
# Порог для распознавания (0.0 - 1.0)
# Выше значение = строже распознавание
THRESHOLD=0.6

# GPIO Configuration
# Пин для управления замком
GPIO_PIN=17

# Время удержания LOW сигнала (миллисекунды)
# Дверь будет открыта на это время при распознавании
GPIO_PULSE_MS=800

# GPIO chip (обычно gpiochip0 на Raspberry Pi)
GPIO_CHIP=gpiochip0

# Sync Configuration
# Интервал синхронизации с сервером (секунды)
SYNC_INTERVAL_SEC=300

# Cache Configuration
# Путь к файлу кэша
CACHE_PATH=raspberry_cache.json

# Access Control
# Cooldown период между срабатываниями (секунды)
# Предотвращает многократное открытие двери при одном распознавании
ACCESS_COOLDOWN_SEC=5.0

# Local Users (Admin)
# Папка с фото локальных пользователей для offline доступа
# Поместите фото админа в эту папку (например, admin.jpg)
LOCAL_USERS_DIR=local_users

# Exit Button Configuration
# Включить кнопку выхода (true/false)
EXIT_BUTTON_ENABLED=true

# GPIO пин для кнопки выхода
# Подключите один контакт кнопки к этому пину, другой к GND
EXIT_BUTTON_PIN=27

# Задержка anti-bounce для кнопки (миллисекунды)
# Предотвращает ложные срабатывания при дребезге контактов
EXIT_BUTTON_DEBOUNCE_MS=200
